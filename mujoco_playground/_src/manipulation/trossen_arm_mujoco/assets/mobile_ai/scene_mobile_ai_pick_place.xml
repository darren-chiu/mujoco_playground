<mujoco model="mobile_ai_pick_place_scene">
  <include file="mobile_ai.xml"/>

  <statistic center="0 0 0.5" extent="1.0"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="160" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <material name="cube_red" rgba="0.9 0.2 0.2 1"/>
    <material name="target_green" rgba="0.2 0.8 0.2 0.5"/>
    <material name="table" rgba="0.6 0.4 0.2 1"/>
  </asset>

  <worldbody>
    <light pos="0 0 2.0" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- Table for manipulation (in front of robot) -->
    <body name="table" pos="1.3 0 0">
      <!-- Table top -->
      <geom name="table_top" type="box" size="0.4 0.6 0.02" pos="0 0 0.8" rgba="0.6 0.4 0.2 1" friction="1.0 0.05 0.01"/>
      <!-- Table legs -->
      <geom name="table_leg_fl" type="cylinder" size="0.03 0.4" pos="0.35 0.55 0.4" rgba="0.5 0.35 0.15 1"/>
      <geom name="table_leg_fr" type="cylinder" size="0.03 0.4" pos="0.35 -0.55 0.4" rgba="0.5 0.35 0.15 1"/>
      <geom name="table_leg_bl" type="cylinder" size="0.03 0.4" pos="-0.35 0.55 0.4" rgba="0.5 0.35 0.15 1"/>
      <geom name="table_leg_br" type="cylinder" size="0.03 0.4" pos="-0.35 -0.55 0.4" rgba="0.5 0.35 0.15 1"/>
    </body>

    <!-- Cube to pick (on left side of table) -->
    <body name="cube" pos="1.0 0.3 0.825">
      <freejoint/>
      <geom name="cube_geom" type="box" size="0.025 0.025 0.025" rgba="0 0 1 0.8" mass="0.0001"/>
      <site name="cube_center" pos="0 0 0" size="0.005" rgba="1 0 0 0"/>
    </body>

    <!-- Target position marker (on right side of table) -->
    <site name="target_site" pos="1.0 -0.3 0.825" size="0.0001" rgba="0 1 0 0.5"/>
  </worldbody>
</mujoco>
